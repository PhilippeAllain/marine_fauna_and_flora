{% extends 'admin/admin.html.twig' %}

{% block title "Flore :" ~ flora.name %}

{% block body %}

<h1>Editer la Flore : {{ flora.name }}</h1>

<div class="container bg-light rounded-3 text-center border border-5 border-primary-subtle">

<div class="mx-auto p-2" style="width: 300px;">
   
    <img src={{  vich_uploader_asset(flora, 'thumbnailFile') }} class="img-thumbnail" alt="Image indisponible"/>

</div>

    {{ form_start(form) }}
        <div class="mb-5 border border-3 border-success">
            <div class="row mb-3 ">
                <div class="col">
                    {{ form_row(form.name, {'label': 'Nom'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.dci, {'label': 'D.C.I.'}) }}
                </div>
            </div>
            <div class="row mb-3 ">
                <div class="col">
                    {{ form_row(form.slug, {'label': 'Jeton'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.species, {'label': 'Esp√®ce'}) }}
                </div>
            </div>     
        </div>
        <div class="container mb-5 border border-3 border-success">
            <div class="row mb-3 ">
                <div class="col">
                    {{ form_row(form.content, {'label': 'Description'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.thumbnailFile, {'label': 'Image'}) }}
                </div>
            </div>
        </div>
        <div class="container mb-3">
            <div class="row mb-3 ">
                <div class="col">
            {{ form_row(form.save, {'label': 'Enregistrer les modifications', 'attr': {'class': 'btn btn-success'}}) }}
                </div>
            </div>
        </div>
        

    {{ form_end(form) }} 


{{ include('partials/footer.html.twig') }}

{% endblock %}