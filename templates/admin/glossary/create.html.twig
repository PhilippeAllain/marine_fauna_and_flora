{% extends 'admin/admin.html.twig' %}

{% block title %}Glossaire{% endblock %}

{% block body %}
    <h1 class="text-center m-3 p-5 border border-3 border-success rounded-3">Créer un terme</h1>

    {{ form_start(form) }}
    <div class="mb-5 border border-3 border-success">
        <div class="col p-5">
            {{ form_row(form.word, {'label': 'Terme'}) }}
        </div>
        <div class="col p-5">
            {{ form_row(form.content, {'label': 'Définition'}) }}
        </div>
    </div>
    <div class="container mb-3 text-center">
        <div class="row mb-3 ">
            <div class="col">
            {{ form_row(form.save, {'label': 'Enregistrer les modifications', 'attr': {'class': 'btn btn-success'}}) }}
            </div>
        </div>
    </div>
     {{ form_end(form) }}
  
   {{ include('partials/footer.html.twig') }}

   {% endblock %}
